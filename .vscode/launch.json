  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run api server",
      "type": "node",
      "request": "launch",
      "args": [
        "${workspaceFolder}/api/src/index.ts"
      ],
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register"
      ],
      "sourceMaps": true,
      "cwd": "${workspaceFolder}/api/",
      "protocol": "inspector",
      "envFile": "${workspaceFolder}/api/.env-local"
    }
  ]
}
